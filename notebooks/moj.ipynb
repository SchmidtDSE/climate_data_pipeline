def attach_xy_from_latlon(da):
    if "lon" in da.coords and "lat" in da.coords:
        try:
            x_vals = da["lon"].mean("y").values
            y_vals = da["lat"].mean("x").values
            da = da.assign_coords(x=("x", x_vals), y=("y", y_vals))
        except Exception as e:
            print("attach x/y failed:", e)
    try:
        da = da.rio.set_spatial_dims(x_dim="x", y_dim="y", inplace=False)
    except Exception:
        pass
    try:
        da = da.rio.write_crs(STANDARD_CRS, inplace=False)
    except Exception:
        pass
    return da


def reproject_and_clip(dataArray, boundaryGDF):
    if dataArray is None:
        return None
    da = dataArray.drop_vars(['landmask', 'lakemask'], errors='ignore')
    da = attach_xy_from_latlon(da)
    if boundaryGDF is None:
        return da
    try:
        clipped = da.rio.clip(boundaryGDF.geometry.values, drop=True, all_touched=True)
        clipped.attrs.update(dataArray.attrs)
        return clipped
    except Exception as e:
        print("clip error:", e)
        return da


