def plotSeasonalMultiScenario_safe(spatialAvgDA, varKey,
                                   histYears=(1970, 2014),
                                   futYears=(2070, 2099)):
    if spatialAvgDA is None:
        print("no data")
        return

    da = spatialAvgDA

    if "scenario" not in da.dims:
        da = da.expand_dims({"scenario": ["Historical Climate"]})

    scen_vals = list(np.atleast_1d(da.scenario.values))
    scen_vals = [s for s in scen_vals if s != "SSP 1-2.6"]

    hist_raw = [s for s in scen_vals if "Historical" in str(s)]
    fut_raw  = [s for s in scen_vals if "Historical" not in str(s)]

    if len(hist_raw) == 0:
        hist = da.sel(time=slice(str(histYears[0]), str(histYears[1])))
    else:
        hist = da.sel(scenario=hist_raw, time=slice(str(histYears[0]), str(histYears[1])))

    h0 = hist.groupby("time.month").mean("time", skipna=True).mean("simulation", skipna=True)
    h0 = h0.squeeze(drop=True)

    plt.figure(figsize=(10,6))
    plt.plot(h0["month"].values, h0.values, linewidth=2, color="black",
             label=f"Historical ({histYears[0]}-{histYears[1]})")

    for s in fut_raw:
        fut = da.sel(scenario=s, time=slice(str(futYears[0]), str(futYears[1])))
        f0 = fut.groupby("time.month").mean("time", skipna=True).mean("simulation", skipna=True)
        f0 = f0.squeeze(drop=True)

        clean = str(s).replace("Historical +", "").strip()
        plt.plot(f0["month"].values, f0.values, linewidth=2,
                 label=f"{clean} ({futYears[0]}-{futYears[1]})")

    plt.title(f"Seasonal Cycle: {analysisVariablesDictionary.get(varKey,varKey)} (Mojave)")
    plt.xlabel("Month")
    plt.ylabel(f"{varKey} ({da.attrs.get('units','')})")
    plt.xticks(range(1,13))
    plt.grid(True)
    plt.legend()
    plt.show()


