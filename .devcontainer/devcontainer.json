{
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "options": [
            "--platform=linux/amd64"
        ]
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/common-utils:2.5.4": {
            "installSsh": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter@2025.7.0",
                "ms-toolsai.datawrangler"
            ]
        }
    }
}