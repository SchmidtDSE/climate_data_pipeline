def calculate_anomalies(baseline, future, varType):
    if baseline is None or future is None:
        return None
    if varType == 'precip':
        epsilon = 1e-9
        anomalies = xr.where(
            abs(baseline) > epsilon,
            ((future - baseline) / baseline) * 100,
            0
        )
        unit = "% Change"
    else:
        anomalies = future - baseline
        unit = "Δ°C"
    ensembleMean = anomalies.mean(dim='simulation')
    ensembleMean.attrs['units'] = unit
    return ensembleMean


