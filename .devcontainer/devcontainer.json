{
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "options": [
            "--platform=linux/amd64"
        ]
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/common-utils:2.5.4": {
            "installSsh": true
        }
    },
//rah
    
    //stops VS Code from overriding  Dockerfile's CMD
    //lets container start and run "tail -f /dev/null",
    // then VS Code attaches to it this apparently more stable
    "overrideCommand": false,
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter@2025.7.0",
                "ms-toolsai.datawrangler",
                //R lang support
                "REditorSupport.r",
                "RDebugger.r-debugger"
            ]
        }
    }
}